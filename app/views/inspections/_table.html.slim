table.table.table-bordered.table-striped
    thead
      tr
        th
          | Nome
        th
          | Criado
        th
          | Atualizado
        th

      tbody
        - @inspections.each do |inspection|
          tr
            td
              = inspection.name
            td
              = inspection.created_at.strftime("%H:%M %d/%m/%Y") 
            td
              = inspection.updated_at.strftime("%H:%M %d/%m/%Y")
            td
              .btn-group[role="group"]
                = link_to "Detalhes", inspection, method: :get, class: "btn btn-outline-info"
                = link_to "Editar", edit_inspection_path(inspection), class: "btn btn-outline-info"
